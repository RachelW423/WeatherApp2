<h1>7-Day Forecast for <%= @location.name %></h1>

<% if @weather_data %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>High</th>
        <th>Low</th>
      </tr>
    </thead>
    <tbody>
      <% @weather_data["daily"].each do |day| %>
        <tr>
          <td><%= Date.strptime(day["dt"].to_s, '%s').strftime('%A, %b %d') %></td>
          <td><%= day["temp"]["max"] %>°C</td>
          <td><%= day["temp"]["min"] %>°C</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No weather data available for this location.</p>
<% end %>
