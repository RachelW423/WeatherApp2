
<h1>Weather for <%= @location.name %></h1>

<% if @location.weathers.any? %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Date</th>
        <th>High Temp (°F)</th>
        <th>Low Temp (°F)</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% @location.weathers.each do |weather| %>
        <tr>
          <td><%= weather.date.strftime("%Y-%m-%d") %></td>
          <td><%= weather.high %>°F</td>
          <td><%= weather.low %>°F</td>
          <td><%= weather.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<h2> 7-Day Temperature Chart</h2>
<canvas id="tempChart" width="400" height="200"></canvas>
<% else %>
  <p>No weather data available</p>
<% end %>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
  initializeChart();
});

function initializeChart() {
  const canvas = document.getElementById('tempChart');
  if (!canvas) {
    console.error('Chart canvas not found');
    return;
  }
  
  const ctx = canvas.getContext('2d');
  const labels = <%= raw @location.weathers.pluck(:date).map { |d| d.strftime("%Y-%m-%d") }.to_json %>;
  const highTemps = <%= raw @location.weathers.pluck(:high).to_json %>.map(temp => (temp * 9 / 5) + 32);
  const lowTemps = <%= raw @location.weathers.pluck(:low).to_json %>.map(temp => (temp * 9 / 5) + 32);

  new Chart(ctx, {
    type: 'line',
    data: {
      labels: labels,
      datasets: [
        {
          label: 'High Temperatures (°F)',
          data: highTemps,
          borderColor: 'rgba(255, 99, 132, 1)',
          backgroundColor: 'rgba(255, 99, 132, 0.2)',
          fill: true,
          tension: 0.4,
        },
        {
          label: 'Low Temperatures (°F)',
          data: lowTemps,
          borderColor: 'rgba(54, 162, 235, 1)',
          backgroundColor: 'rgba(54, 162, 235, 0.2)',
          fill: true,
          tension: 0.4,
        },
      ],
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          position: 'top',
        },
      },
      scales: {
        x: {
          title: {
            display: true,
            text: 'Date',
          },
        },
        y: {
          title: {
            display: true,
            text: 'Temperature (°F)',
          },
        },
      },
    },
  });
}

</script>


<button onclick="window.location.href='/'">Check Another Location</button>
